@model IDEmpresaJAL.Entity.Models.CTipoSolicitante
@{
    ViewData["Title"] = "Editar tipo de solicitante";

}

<div class="py-3 container-fluid">
    <div class="card shadow mb-4 pb-5">
        <div class="card-header py-3 bg-primary">
            <h4 class="font-weight-bold text-white p-2">Tipos de solicitantes</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-9 pt-3">
                    <h6 class="text-primary">Editar tipo de solicitante</h6>
                </div>

            </div>
            <hr />
            <form method="post" asp-action="Edit">

                <div class="row px-2 offset-1">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row p-3">


                        <input type="hidden" asp-for="Id" />
                        <div class="col-10">

                            <div class="form-floating mb-3">
                                <input asp-for="TipoSolicitante" class="form-control" id="floatingInput" placeholder="Tipo de solicitante">
                                <label asp-for="TipoSolicitante"></label>
                                <span asp-validation-for="TipoSolicitante" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-10">
                            <div class="form-floating mb-3">
                                <textarea asp-for="Descripcion" class="form-control" style="height:100px;"></textarea>
                                <label asp-for="Descripcion"></label>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group-row">
                        <div class="col-8">
                            <partial name="_VistaCrearVolver"></partial>
                        </div>
                    </div>


                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
    @if (TempData["err"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                swal("Error", '@TempData["err"]', "error");
            };
        </script>
    }

}
