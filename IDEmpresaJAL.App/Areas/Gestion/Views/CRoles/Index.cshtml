@{
    ViewData["Title"] = "Roles";
}

<div class="py-3 container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary">
            <h4 class="font-weight-bold text-white p-2">Roles de la plataforma</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-9 pt-3">
                    <h6 class="text-primary">Listado de roles del sistema</h6>
                </div>
                <div class="col-sm-3">
                    <a asp-action="Create" class="btn btn-success w-100"><i class="bi bi-plus-lg"></i> Agregar</a>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <table id="tblRoles" class="table table-striped table-bordered w-100 small" style="text-align:justify;vertical-align:middle;">
                        <thead>
                            <tr>
                                @* <th>Id</th> *@
                                <th>Rol</th>

                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/gestion_js/roles.js"></script>
    @{
        <partial name="_ValidationScriptsPartial" />


    }
    @if (TempData["msg"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                swal("OK", '@TempData["msg"]', "success");
            };
        </script>
    }
}