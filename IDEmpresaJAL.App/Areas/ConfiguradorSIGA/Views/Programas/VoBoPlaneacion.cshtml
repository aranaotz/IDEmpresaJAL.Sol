@{
    ViewData["Title"] = "Programas";
}

<div class="py-3 container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary">
            <h4 class="font-weight-bold text-white p-2">Programas públicos</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-9 pt-3">
                    <h6 class="text-primary">Listado de programas</h6>
                </div>
                
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <table id="tbl_programas" class="table table-striped table-bordered w-100 small" style="text-align:justify;vertical-align:middle;">
                        <thead>
                            <tr>
                                @* <th>Id</th> *@
                                <th>Programa presupuestario</th>
                                <th>Tipo</th>
                                <th>Inicio</th>
                                <th>Fin</th>
                                <th>Presupuesto</th>
                                <th>Estatus</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/configuradorSiga_js/tprogramas_vobo.js"></script>
    @{
        <partial name="_ValidationScriptsPartial" />


    }
    @if (TempData["msg"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                swal("OK", '@TempData["msg"]', "success");
            };
        </script>
    }
    @if (TempData["errEdit"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                swal("Atención", 'No puedes modificar el programa, por que se encuentra en revisión de Planeación', "warning");
            };
        </script>
    }

    @if (TempData["errAprob"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                swal("Atención", 'No puedes modificar el programa, por que se encuentra aprobado por Planeación', "warning");
            };
        </script>
    }

}