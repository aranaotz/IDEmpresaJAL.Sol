@{
    ViewData["Title"] = "Programas";
}

<div class="py-3 container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary">
            <h4 class="font-weight-bold text-white p-2">Componentes</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-9 pt-3">
                    <h6 class="text-primary">Componentes presupuestales</h6>
                </div>
                <div class="col-sm-3">
                    <input type="hidden" value="@TempData["pId"]" id="programa_id" />
                   <a href="@Url.Action("AddComponente", new{id=TempData["pId"]})" class="btn btn-sm btn-success w-100"><i class="bi bi-plus-lg"></i> Agregar componente</a>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <table id="tbl_componentes" class="table table-striped table-bordered w-100 small" style="text-align:justify">
                        <thead>
                            <tr>
                                @* <th>Id</th> *@
                                <th>Componente</th>
                                <th>Descripcion</th>
                                <th>Partida</th>
                                <th>Monto</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-secondary form-control">&nbsp;<i class="bi bi-chevron-double-left"></i>Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/configuradorSiga_js/tprogramas_componentes.js"></script>
    @{
        <partial name="_ValidationScriptsPartial" />


    }
    @if (TempData["msg"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                swal("OK", '@TempData["msg"]', "success");
            };
        </script>
    }

}