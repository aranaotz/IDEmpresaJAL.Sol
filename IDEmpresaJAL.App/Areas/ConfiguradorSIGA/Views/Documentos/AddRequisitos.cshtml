@model IDEmpresaJAL.Entity.Models.CDocumentosRequisitos

@{
    ViewData["Title"] = "Documentos";
}
<div class="py-3 container-fluid ">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary">
            <h4 class="font-weight-bold text-white p-2">Documentos</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-9 pt-3">
                    <h6 class="text-primary">Agregar requisito al documento</h6>
                </div>

            </div>
            <hr />
            <form method="post" asp-action="AddRequisitos">

                <div class="row px-2 offset-1">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row p-3">
                        
                        <div class="col-10">
                            <div class="form-floating mb-3">
                                <textarea asp-for="Requisito" class="form-control" style="height:130px;"></textarea>
                                <label asp-for="Requisito"></label>
                                <span asp-validation-for="Requisito" class="text-danger"></span>
                            </div>
                        </div>
                        <input type="hidden" asp-for="DocumentoId" value="@TempData["docId"]" />
                    </div>
                    <div class="row pt-5 pb-5">
                        <div class="col-4">
                            <a href="@Url.Action("Edit", new{id=TempData["docId"]})" class="btn btn-secondary form-control">&nbsp;<i class="bi bi-chevron-double-left"></i>Regresar</a>
                        </div>
                       
                        <div class="col-4">
                            <button type="submit" class=" btn btn-primary form-control">Guardar&nbsp;<i class="bi bi-floppy2"></i></button>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {



    @{
        <partial name="_ValidationScriptsPartial" />
    }


    @if (TempData["err"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                swal({
                    title: "Error!",
                    text: "El nombre de la dirección o área que deseas agregar ya se encuentra registrado en el sistema.",
                    type: "error"
                });
            };
        </script>
    }




}