<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IDEmpresa Jalisco</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!--Sidebar css-->
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!--Css todos-->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.0/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <aside id="sidebar">
            <div class="h-100">
                <div class="sidebar-logo">
                    <a href="#"><img src="~/img/idEmpresa_logo_blanco.png" width="100%" /></a>
                </div>
               
                <!-- Sidebar Navigation -->
                <div class="border-bottom bg-white"></div>

                <ul class="sidebar-nav">
                    
                   
                    @await Component.InvokeAsync("MenuUsuario")
                    @await Component.InvokeAsync("Menu")
                   
                    <li class="sidebar-item">
                        <a asp-area="Gestion" asp-controller="Home" asp-action="Salir" class="sidebar-link fw-bold ps-3 fw-bold">
                            <i class="bi bi-box-arrow-right  "></i>&nbsp;Cerrar sesión
                        </a>
                    </li> 

                </ul>

            </div>

        </aside>
        <!-- Main Component -->
        <div class="main">
            @* <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
                <div class="row">
                    <div class="col-sm-3 offset-sm-9 text-end text-white">nombre de usuario</div>
                </div>
                
            </nav> *@
            <main class="content px-3 py-2">
                <div class="container-fluid">

                    <main role="main" class="pb-3">

                        @RenderBody()
                    </main>
                </div>
            </main>
        </div>
    </div>


    <footer class=" footer text-muted bg-primary">
        <div class="container p-4">
           <div class="row">
               <div class="col-2 text-end border-end border-white">
                    <img src="~/img/jalisco_logo.png" width="70" />
               </div>
               <div class="col-2 pt-2 text-start">
                    <img src="~/img/sedecograywob.png" width="150" />
               </div>
               <div class="col-6 text-start text-white small">
                    <span><strong>Secretaría de Desarrollo Económico</strong></span><br />
                    <span class="small"><i class="fa fa-map-marker" aria-hidden="true"></i>&nbsp;Dirección:&nbsp;Calle López Cotilla #1505, Guadalajara.</span><br />
                    <span class="small"><i class="fa fa-phone" aria-hidden="true"></i>&nbsp;Teléfono:&nbsp;33-3030-2000 </span>
               </div>
           </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!--Js plugins-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.0/js/dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.serializeJSON/3.2.1/jquery.serializejson.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
